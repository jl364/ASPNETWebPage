@{
    bool deleteSuccess = false;
    var photoName = "";
    if (IsPost)
    {
        photoName = Request["photoFileName"];
        var fullPath = Server.MapPath("~/images/" + photoName);

        if (File.Exists(fullPath))
        {
            File.Delete(fullPath);
            deleteSuccess = true;
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>Delete a Photo</title>
</head>
<body>
    <h1>Delete a Photo from the Site</h1>
    <form name="deletePhoto" action="" method="post">
        <p>
            File name of image to delete (with extension):
            <input name="photoFileName" type="text" value="" />
        </p>
        <p><input type="submit" value="Delete" /></p>
    </form>

    @if (deleteSuccess)
    {
        <p>
            @photoName deleted!
        </p>
    }
</body>
</html>